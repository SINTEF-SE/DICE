	author = {{R. E. Balfour}},
	month = may,
	year = {2014},
	note = {Journal Abbreviation: IEEE Long Island Systems, Applications and Technology (LISAT) Conference 2014},
	keywords = {Organizations, M2M, Managers, Information management, Information analysis, Electronic data interchange, Emergency services, Distributed databases, Standards organizations, common operating picture, Common operating pictures, Data visualization, Emergency information, emergency information sharing, fourDscape, Human resource management, IoE, Management, shared situational awareness, Shared situational awareness, Societies and institutions, Command and control systems, Feeds},
