	keywords = {Organizations, Decision making, Cloud computing, Collaboration, Commerce, Data privacy, Estimation, Certification process, Cloud Federation, Cloud federations, Cloud securities, Cloud Security Alliance, Cloud service providers, Decision making criteria, Preliminary assessment, Selection decisions, Trust Methodology, Trusted computing, Windows operating system, Cloud computing security, Measurement},
